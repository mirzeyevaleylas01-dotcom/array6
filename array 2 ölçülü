#include <iostream>
using namespace std;

void calculateStats2D(int arr[][3], int rows, int cols) {
    int sum = 0;
    long long product = 1;
    int min = arr[0][0];
    int max = arr[0][0];

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {

            sum += arr[i][j];           
            product *= arr[i][j];       

            if (arr[i][j] < min)
                min = arr[i][j];

            if (arr[i][j] > max)
                max = arr[i][j];
        }
    }

    cout << "Cem: " << sum << endl;
    cout << "Hasil: " << product << endl;
    cout << "Minimum: " << min << endl;
    cout << "Maksimum: " << max << endl;
}

int main() {
    int arr[2][3] = {
        {3, 7, -2},
        {10, 5, 1}
    };

    calculateStats2D(arr, 2, 3);

    return 0;
}
